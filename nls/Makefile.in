# $tcsh$

LOCALES=	C et finnish french german greek italian ja pl russian \
		spanish ukrainian
GENCAT=		gencat
INSTALL=	ginstall
RM?=		rm
VPATH=@srcdir@
srcdir=@srcdir@

prefix=@prefix@
datarootdir=@datarootdir@
localedir=@localedir@

all:

CATALOGS+=C.cat
INSTALLED+=${localedir}/C/LC_MESSAGES/tcsh.cat
${localedir}/C/LC_MESSAGES/tcsh.cat:	C.cat
	mkdir -p $(@D)
	$(INSTALL) $< $@

C.cat: ${srcdir}/C/*set*
	LANG=C $(GENCAT) $@ $^ $>

